{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "target": "es5",
    "paths": {
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@litStyles/*": [
        "lit-styles/*"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@views/*": [
        "views/*"
      ]
    }
  }
}
